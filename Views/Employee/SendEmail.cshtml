@using TheTask.Data;
@{
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}
@model Application
<div class="card my-5">
    <h1 class="card-header text-white text-center" style="background-color:rgba(0,111,62,255);">Approval</h1>
    <div class="card-body">
        <form method="post" >
            <div class="mb-3">
                <label for="approvalDateTime" class="form-label">Approval Date and Time</label>
                <input type="datetime-local" class="form-control" id="approvalDateTime" name="approvalDateTime" required>
                <input type="hidden" name="appId" value="@Model.Id" />
            </div>

            <div class="mb-3">
                <label for="notes" class="form-label">Notes</label>
                <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
            </div>

            <div class="text-center">
                <button asp-controller="Employee" asp-action="SendEmailPOST" type="submit" class="btn btn-success me-3">Send Email</button>
                <a asp-controller="Employee" asp-action="ViewDetails" asp-route-id="@Model.Id" type="button" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>