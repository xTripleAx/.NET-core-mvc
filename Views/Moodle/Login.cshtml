@using TheTask.Data;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Minty.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/TheTask.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Extra.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color:rgba(0,111,62,255);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/assets/usalwhite.png" style="height:60px;width:140px"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active text-white" asp-area="" asp-controller="Home" asp-action="Index">Website</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <p>@ViewBag.hi</p>
    <div class="d-flex justify-content-center align-items-center">
        <img src="/assets/usal.png" style="width: 30%;" />
    </div>
    <div class="mt-2" style="align-items: center;" >
        <p class="d-flex justify-content-center align-items-center">@ViewData.ModelState["Hello"]?.Errors?.First()?.ErrorMessage</p>
        <form class="loginform shadow-lg" method="POST">
            <div class="form-outline mb-4">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                    <input name="user_id" type="text" id="userid" class="form-control" autocomplete="off" placeholder="User ID" />
                </div>
            </div>

            <div class="form-outline mb-4">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-key"></i>
                    </span>
                    <input name="password" type="password" id="password" class="form-control" autocomplete="off" placeholder="Password" />
                </div>
            </div>

            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="form2Example31" />
                        <label class="form-check-label" for="form2Example31"> Remember me </label>
                    </div>
                </div>

            </div>

            <button type="submit" class="btn btn-block mb-4" style="background-color:rgba(0,111,62,255);">Log in</button>

        </form>
    </div>
   
</body>